<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_image_view"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="393dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:maxLines="2"
        android:minLines="2"
        android:text="News Heading"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/news_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/news_image_view"
        app:layout_constraintTop_toBottomOf="@+id/news_date" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="158dp"
        android:layout_height="15dp"
        android:ellipsize="end"
        android:gravity="clip_vertical|right"
        android:maxLines="1"
        android:minLines="1"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/news_image_view"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/news_description"
        android:layout_width="393dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:minLines="3"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/news_image_view"
        app:layout_constraintStart_toStartOf="@+id/news_image_view"
        app:layout_constraintTop_toBottomOf="@id/news_title" />

</android.support.constraint.ConstraintLayout>